<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/PainoIndeksiBtn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/painonappi"
        android:scaleType="fitXY"
        android:tint="@color/design_default_color_error"
        app:layout_constraintBottom_toTopOf="@+id/VerenpaineBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/paino" />

    <ImageButton
        android:id="@+id/VerenpaineBtn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/verenpaine"
        android:scaleType="fitXY"
        android:tint="@color/design_default_color_error"
        app:layout_constraintBottom_toTopOf="@+id/VesiLaskuriBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PainoIndeksiBtn"
        app:srcCompat="@drawable/verenpaine" />

    <ImageButton
        android:id="@+id/VesiLaskuriBtn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/vesilaskuri"
        android:scaleType="fitXY"
        android:tint="@color/design_default_color_error"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/VerenpaineBtn"
        app:srcCompat="@drawable/water" />

    <TextView
        android:id="@+id/PainoIndeksi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/painoindeksi"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/design_default_color_error"
        app:layout_constraintBottom_toTopOf="@+id/VerenpaineBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/PainoIndeksiBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Verenpaine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/verenpaine"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/design_default_color_error"
        app:layout_constraintBottom_toTopOf="@+id/VesiLaskuriBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/VerenpaineBtn"
        app:layout_constraintTop_toBottomOf="@+id/PainoIndeksiBtn" />

    <TextView
        android:id="@+id/Vesilaskuri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vesilaskuri"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/design_default_color_error"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toEndOf="@+id/VesiLaskuriBtn"
        app:layout_constraintTop_toBottomOf="@+id/VerenpaineBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>