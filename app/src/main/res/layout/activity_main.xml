<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <ImageButton
        android:id="@+id/PainoIndeksiBtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/painonappi"
        android:scaleType="fitXY"
        android:tint="@color/design_default_color_error"
        app:layout_constraintBottom_toTopOf="@+id/VerenpaineBtn"
        app:layout_constraintEnd_toStartOf="@+id/PainoIndeksi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/paino" />

    <ImageButton
        android:id="@+id/VerenpaineBtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/verenpaine"
        android:scaleType="fitXY"
        android:tint="@color/design_default_color_error"
        app:layout_constraintBottom_toTopOf="@+id/vesiLaskuriBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.128"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PainoIndeksiBtn"
        app:srcCompat="@drawable/verenpaine" />

    <ImageButton
        android:id="@+id/vesiLaskuriBtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/vesilaskuri"
        android:scaleType="fitXY"
        android:tint="@color/design_default_color_error"
        app:layout_constraintBottom_toTopOf="@+id/ArrayBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.128"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/VerenpaineBtn"
        app:srcCompat="@drawable/water" />

    <ImageButton
        android:id="@+id/ArrayBtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/vesilaskuri"
        android:scaleType="fitXY"
        android:tint="@color/design_default_color_error"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.128"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vesiLaskuriBtn"
        app:srcCompat="@drawable/water" />



    <TextView
        android:id="@+id/Historia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/historia"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/design_default_color_error"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ArrayBtn"
        app:layout_constraintTop_toBottomOf="@+id/Vesilaskuri"
        app:layout_constraintVertical_bias="0.571" />

    <TextView
        android:id="@+id/PainoIndeksi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/painoindeksi"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/design_default_color_error"
        app:layout_constraintBottom_toTopOf="@+id/VerenpaineBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/PainoIndeksiBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Verenpaine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/verenpaine"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/design_default_color_error"
        app:layout_constraintBottom_toTopOf="@+id/ArrayBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toEndOf="@+id/VerenpaineBtn"
        app:layout_constraintTop_toBottomOf="@+id/PainoIndeksiBtn"
        app:layout_constraintVertical_bias="0.262" />

    <TextView
        android:id="@+id/Vesilaskuri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="55dp"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:text="@string/vesilaskuri"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/design_default_color_error"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/vesiLaskuriBtn"
        app:layout_constraintTop_toBottomOf="@+id/VerenpaineBtn"
        app:layout_constraintVertical_bias="0.262" />
</androidx.constraintlayout.widget.ConstraintLayout>